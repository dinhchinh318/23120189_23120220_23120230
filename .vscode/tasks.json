{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++-13",
            "args": [
                "-std=c++2b",
                "-fdiagnostics-color=always",
                "-g",
                "source/main.cpp",
                "source/src/*.cpp",
                "source/lib/*.cpp",
                "-o",
                "${fileDirname}/../release/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}